@model domain.Cart

@* <h1>Kundvagnen - @Model.Customer.FirstName @Model.Customer.LastName</h1> *@
<h1>Kundvagnen - @ViewData["CustomerName"]</h1>

<h5>@ViewData["Erbjudande"]</h5>

<h6>Här är dina produkter @Model.Customer.FirstName!</h6>
<br>
<h4>Antal produkter i kundvagn: @Model.Quantity</h4>

<table class="table">
    <thead>
        <tr>
            <th>Artikelnummer</th>
            <th>Produktnamn</th>
            <th>Pris</th>
            <th>Antal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ItemNumber</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" asp-controller="Payments">Gå till kassan!</a>